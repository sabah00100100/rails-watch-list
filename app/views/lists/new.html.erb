<div class="container text-center pt-5">
  <div class="row ">
    <div class="col-12 col-md-6 offset-lg-3 bg-white rounded p-3 shadow">
      <h1 class="text-info bg-dark mb-5">Create new list</h1>
      <h2 class="text-info bg-dark mb-5">Here are the top rated movies :</h2>
    </div>
  </div>
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h3 class="text-info bg-dark ">Create a new list</h3>
          <%= simple_form_for @list do |f| %>
            <%= f.input :name, placeholder: 'Drama' %>
            <%= f.submit class: 'btn btn-flat' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
