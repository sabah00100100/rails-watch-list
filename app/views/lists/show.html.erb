<div class="container p-5">
  <div class="row">
    <div class="bg-white rounded p-3 shadow">
      <h2 class="m-3">Your <%= @list.name %> list has <%= pluralize(@list.movies.size, 'movie') %></h2>
      <div class="m-3 col">
        <% @list.bookmarks.each do |bookmark| %>
          <p class="col text-info">Title : <%= bookmark.movie.title %></p>
          <p><%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "col movie-img rounded" %></p>
          <p class="col text-info">Your bookmark : <%= bookmark.comment %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6 bg-dark text-info rounded p-3 shadow mt-3 d-flex justify-content-around">
      <%= link_to 'Back to all lists', lists_path, class: "text-decoration-none btn-flat text-info" %>
      <%= link_to 'Bookmark a movie', new_list_bookmark_path(@list), class: "text-decoration-none btn-flat text-info"%>
    </div>
  </div>
</div>
